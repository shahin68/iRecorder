<resources>

    <!--region Material Button Outlined Style-->
    <style name="MaterialButtonStyle" parent="@style/Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:minHeight">@dimen/button_height_normal</item>
        <item name="backgroundTint">@color/white</item>
        <item name="cornerRadius">@dimen/radius_normal</item>
        <item name="android:elevation">3dp</item>
        <item name="rippleColor">?attr/colorSecondary</item>
        <item name="strokeColor">?attr/colorPrimary</item>
    </style>
    <!--endregion-->

    <!--region Circular Progress Indicator Style-->
    <style name="CircularProgressIndicatorStyle" parent="Widget.MaterialComponents.CircularProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="hideAnimationBehavior">inward</item>
        <item name="showAnimationBehavior">outward</item>
    </style>
    <!--endregion-->

    <!--region Circular Progress Indicator Style-->
    <style name="LinearProgressIndicatorStyle" parent="Widget.MaterialComponents.LinearProgressIndicator">
        <item name="android:indeterminate">true</item>
        <item name="hideAnimationBehavior">inward</item>
        <item name="showAnimationBehavior">outward</item>
    </style>
    <!--endregion-->
</resources>
