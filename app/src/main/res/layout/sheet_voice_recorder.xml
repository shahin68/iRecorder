<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:clickable="true"
    android:focusable="true"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior">

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_background_sheet_blue"
        android:clickable="true"
        android:elevation="@dimen/elevation_large"
        android:focusable="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/txt_sheet_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingVertical="@dimen/spacing_large"
                android:text="@string/text_sheet_title_start_recording"
                android:textColor="?attr/colorOnPrimary"
                android:textSize="@dimen/text_size_large" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/ic_sheet_close"
                android:layout_width="@dimen/icon_size_normal"
                android:layout_height="@dimen/icon_size_normal"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_marginEnd="@dimen/spacing_large"
                android:foreground="@drawable/ripple_light_8dp"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/ic_close"
                app:tint="?attr/colorOnPrimary" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/layout_sheet_progress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_large"
            android:paddingTop="@dimen/spacing_small">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_sheet_audio_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:gravity="center|start"
                    android:maxLines="1"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="Audio name" />

                <TextView
                    android:id="@+id/txt_sheet_audio_duration"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center|end"
                    android:textColor="?attr/colorOnPrimary"
                    android:textSize="@dimen/text_size_normal"
                    tools:text="Duration" />
            </LinearLayout>

            <ProgressBar
                android:id="@+id/progressbar_sheet"
                style="@style/Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:indeterminate="false"
                android:max="0"
                android:progress="0"
                tools:progress="40" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/btn_sheet_record"
                android:layout_width="@dimen/icon_size_large"
                android:layout_height="@dimen/icon_size_large"
                android:layout_marginVertical="@dimen/spacing_normal"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="?attr/colorOnPrimary"
                app:cardCornerRadius="@dimen/radius_extra_large"
                app:cardElevation="@dimen/elevation_normal">

                <androidx.appcompat.widget.AppCompatImageView
                    android:id="@+id/ic_sheet_record"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitCenter"
                    app:srcCompat="@drawable/ic_mic"
                    app:tint="?attr/colorPrimary" />
            </androidx.cardview.widget.CardView>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_sheet_save"
                style="@style/MaterialButtonStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/spacing_large"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:backgroundTint="?attr/colorOnPrimary"
                android:text="@string/text_btn_save"
                android:textColor="?attr/colorPrimary" />
        </LinearLayout>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>